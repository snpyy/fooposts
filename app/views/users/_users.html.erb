<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media mb-3">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div><%= user.name %></div>
          <div><%= link_to 'View Profile', user_path(user) %></div>
        </div>
      </li>
    <% end %>  
  </ul>
    <%= paginate users %>
<% end %>  